{
  "name": "Web annotation tool",
  "version": "0.1.0",
  "description": "Web annotation tool",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "name": "Click to enable marker"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
